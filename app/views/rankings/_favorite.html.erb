<div class="col-sm-5">
  <% if posts.any? %>
    <ul class="media-list">
      <h3>人気記事ランキング</h3>
      <% posts.each_with_index do |post, index| %>
        <li class="media">
          <div class="media-left">
            <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
          </div>
          <div class="media-body">
            <div>
              <p><%= index+1 %>位:<%= link_to post.title, post_path(post.id) %> いいね件数:<%= post.favorites.count %></p>
            </div>
            <div>
              <span class="text-muted">by <%= link_to post.user.name, user_path(post.user) %> 投稿日時: <%= l(post.created_at, format: :long) %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>