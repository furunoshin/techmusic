<% if current_user.like_comment?(comment) %>
  <%= form_for(current_user.comment_favorites.find_by(comment_id: comment.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :comment_id, comment.id %>
    <%= f.submit 'いいね済み', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.comment_favorites.build) do |f| %>
    <%= hidden_field_tag :comment_id, comment.id %>
    <%= f.submit 'いいね', class: 'btn btn-default btn-xs' %>
  <% end %>
<% end %>
