<div class="col-sm-5">
  <% if posts.any? %>
    <ul class="media-list">
      <% posts.each do |post| %>
        <li class="media">
          <div class="media-left">
            <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
          </div>
          <div class="media-body">
            <div>
              <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
            </div>
            <div>
              <p><%= link_to post.title, post_path(post.id) %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="col-sm-offset-2 col-sm-5">
  <% if users.any? %>
    <ul class="media-list">
      <% users.each do |user| %>
        <li class="media">
          <div class="media-left">
            <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          </div>
          <div class="media-body">
            <div>
              <p><%= link_to user.name, user_path(user) %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>