<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "タイトル", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :tag, placeholder: "DTMに関連するタグをスペース区切りで5つまで入力（例: Logic compressor）", class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.text_area :content, placeholder:"ここにDTM知識を書いてみよう。", class: 'form-control', rows: 10 %>
      </div>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
    <div>
      <%= link_to '戻る', user_path(current_user), class: 'btn btn-link btn-xs'%>
    </div>
  </div>
</div>