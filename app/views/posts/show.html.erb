<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h2 class="section-heading"><%= @post.title %></h2>
        <blockquote class="blockquote"><%= @post.tag %></blockquote>
        <p><%= @post.content %></p>
      </div>
    </div>
  </div>
</article>

<% if logged_in? %>
  <%= render 'favorites/like_button', post: @post %>
<% end %>

<div>
  <% if current_user == @post.user %>
  <div>
    <%= link_to "編集", edit_post_path(@post.id), class: 'btn btn-primary	 btn-xs'%>
    <%= link_to "削除", @post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
  </div>
  <% end %>
</div>

<% if logged_in? %>
  <%= render 'comments/comment', post: @post %>
<% end %>

<div>
  <%= link_to '戻る', root_path, class: 'btn btn-link btn-xs'%>
</div>