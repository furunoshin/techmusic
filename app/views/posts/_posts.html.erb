<ul class="media-list">
  <% posts.each do |post| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= l(post.created_at, format: :long) %></span>
        </div>
        <div>
          <p><%= link_to post.title, post_path(post.id) %></p>
        </div>
        <p>いいね件数:<%= post.favorites.count %></p>
        
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>